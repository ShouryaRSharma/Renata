
<%= form_with model: post do |f| %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control string', placeholder: "Title" %>
    </div>
    <div class="form-group">
      <%= f.label :thumbnail, class: 'form-control' %>
      <%= f.file_field :thumbnail %>
    </div>
    <div class="form-group">
      <%= f.label :banner, class: 'form-control' %>
      <%= f.file_field :banner %>
    </div>
    <div class="form-group">
      <%= f.rich_text_area :body, placeholder: "Type Blog stuff here" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-dark" %>
  </div>
<% end %>
